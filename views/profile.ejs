<script src="/js/autocomplete.js"></script>
<script src="/js/tradingCards.js"></script>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center"><span id="sentFromId"><%= user.id %></span> <span id="sentFromName"><%= user.username %></span></h1>
  </div>
</div>
<h1 class="text-center">Tradable Games</h1>
<div id="tradingArea" class="container">
</div>
<h1 class="text-center">Trading Window</h1>
<h2 class="text-center" id="messageBox"></h2>
  <div class="row">
    <div id="tradeWindowOut" class="col-sm-6">
    </div>
    <div id="tradeWindowIn" class="col-sm-6">
    </div>
  </div>
  <div id="tradeWindowOutInfo" class="col-sm-6 text-center">
    <div class='text-center'>
      <button id="clearOutTrade" class="btn btn-danger">Clear Outgoing Trade</button>
      <button id="acceptTrade" class="btn btn-info">Accept Trade Request</button>
      <div id="acceptedByTrader">
      </div>
    </div>
    <div id="playerDropDownContainter" class="text-center">
      <input type="text" id="playerDropDown"/>
    </div>
    <div class='text-center'>
      <div id="suggestion">
      </div>
    </div>
  </div>
  <div id="tradeWindowInfo" class="col-sm-6 text-center">
    <div class='text-center'>
      <h2>Receiving from: <span id="playerIn"></span></h2>
    </div>
  </div>
<h1 id="tradeInProgress" class="text-center"></h1>
<h1 class="text-center">Owned Games</h1>
<div id="ownedGames" class="container">
</div>
<div class="row">
  <div class="col-sm-6">
    <h3 class="text-center">Giveaways Won</h3>
    <% contests.forEach(function(contest) { %>
      <h5 class="text-center"><strong><%=contest.name%></strong></h5>
      <h5 class="text-center"><strong>Ended <%=moment(contest.updatedAt).tz("America/Los_Angeles").format('LLL')%> PST</strong></h5>  
    <% }); %> 
  </div>
  <div class="col-sm-6">
    <h3 class="text-center">Current Traders</h3>
    <div id="currentPlayers" class="text-center"> 
  </div>    
</div>
