<script src="/js/3rdparty/TimeCircles.js"></script>
<script src="/js/liveUpdatePlayerList.js"></script>
<script src="/js/timerAdminGameList.js"></script>

<h1 class="text-center">Current Running Giveaways</h1>

<div class="container col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">

  <% giveaways.forEach(function(giveaway) { %>
    <% if(!giveaway.hidden) { %>
      <div class="text-center well">
        <h3><strong><%=giveaway.name%></strong></h3>
        <h4 data="ids"  giveawayId="<%=giveaway.id%>">
          <%=moment(giveaway.createdAt).tz("America/Los_Angeles").format('LLL')%> PST
        </h4>

        <form action="/keyPhrase/<%=giveaway.id%>" method="POST" accept-charset="utf-8">
          <div class="form-group">
            <% if(!giveaway.ended) { %>
              <input name="keyphrase" type="text" class="form-control" placeholder="Enter The Password" required/>
              <button type="submit" class="btn btn-info">Enter Giveaway</button>
            <%}%>
            <% if(giveaway.ended) { %>
              <h3>This giveaway is over!</h3>
            <%}%>
          </div>
        </form>
        <span class="numberOfPlayer" giveawayId="<%=giveaway.id%>">
        <h3 class="text-center">Player Group</h3>
        <ul class="playerList" playerListId="<%=giveaway.id%>">
        </ul>
        <h3 class="text-center">Winner Group</h3>
        <ul class="playerList" winnerListId="<%=giveaway.id%>">
        </ul>   
        </span>
        <!-- <div id="timer"> -->
          <h6 id="timer<%=giveaway.id%>"></h6>
          <h6 id="timerDisplay<%=giveaway.id%>" data="display"></h6>
        <!-- </div> -->
      </div>
    <% } %>
  <% }); %>

</div>


