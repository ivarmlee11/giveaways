<script src="/js/adminLiveUpdatePlayerList.js"></script>
<div class="container-fluid">
  <nav class="navbar navbar-inverse">
    <ul class="nav navbar-nav">
      <li><a class="nav-link" href="/auth/loggedIn"><h5>Make A Giveaway</h5></a></li>
      <li><a class="nav-link" href="/giveawayList"><h5>Join A Giveaway</h5></a></li>
      <li><a class="nav-link" href="/admin/adminList"><h5>Edit Admins</h5></a></li>
      <li><h5><%=JSON.stringify(currentUser.username) %></h5></li>
    </ul>
  </nav>
</div>

<h1 class="text-center">Current Running Giveaways</h1>

<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <% giveaways.forEach(function(giveaway) { %>
      <div class="well">
        <h3><strong><%=giveaway.name%></strong></h3>
        <a href="/admin/playerList/<%=giveaway.id%>"><h6>Select This Giveaway</h6></a>
        <span class="numberOfPlayer" giveawayId="<%=giveaway.id%>">
        </span>
        <ul class="playerList" playerListId="<%=giveaway.id%>">
        </ul>
      </div>
    <% }); %>
    <h1 id="winner" class="text-center"></h1>  
  </div>

</div>
