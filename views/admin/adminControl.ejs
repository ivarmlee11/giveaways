<div id="gameEditForm" class="jumbotron hide">
  <div class="container">
  <h1 class="text-center">Edit Game</h1>
    <form action="/game/edit/" method="POST">
        <div class="form-group row">
          <label for="editGameName" class="col-sm-2 col-form-label">Game Name</label>
          <div class="col-sm-10">
            <input id="editGameName" class="form-control" name="editGameName" type="text" placeholder="Name" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="editGameCode" class="col-sm-2 col-form-label">Key Code for Product</label>
          <div class="col-sm-10">
            <input id="editGameCode" class="form-control" name="editGameCode" type="text" placeholder="Include spaces and/or dashes" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="editGameOwner" class="col-sm-2 col-form-label">Edit Owner</label>
          <div class="col-sm-10">
            <input id="editGameOwner" class="form-control" name="editGameOwner" type="text" placeholder="Username of owner if applicable">
          </div>
        </div>

        <div class="form-group row">
          <label for="currentGameId" class="col-sm-2 col-form-label">Game Id</label>
          <div class="col-sm-10">
            <input id="currentGameId" class="form-control" name="currentGameId" type="text" readonly>
          </div>
        </div>

        <fieldset id="editAuthChoiceFieldset" class="form-group row hide">
          <legend class="col-form-legend col-sm-2">User's Auth Portal</legend>
          <div class="col-sm-10">
            <div class="form-check">  
              <div class="btn-group" data-toggle="buttons">           
                <label class="btn btn-success active">
                  <input id="editAuthChoiceTwitch" type="radio" name="editAuthChoice" value="Twitch" autocomplete="off">
                  <h4>Twitch</h4>
                </label>
                <label class="btn btn-primary">
                  <input id="editAuthChoiceBeam" type="radio" name="editAuthChoice" value="Beam" autocomplete="off">
                  <h4>Beam</h4>
                </label>
              </div>
            </div>
          </div>
        </fieldset>
        <button type="submit" class="btn-primary success">Edit Game</button>
        <button id="refresh" class="btn-danger">Leave Edit Mode</button>
        <button id="clearEdit" class="btn-info">Clear User Info</button>
      </form>
  </div>
</div>

