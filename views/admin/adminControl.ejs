<h1 class="text-center">Admin Control Panel</h1>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <form action="/admin/adminGiveawayList" method="POST" accept-charset="utf-8">
      <div class="form-group">
        <label for="giveawayName">Giveaway Name</label>
        <input type="text" class="form-control" id="giveawayName" name="giveawayName" required>
        <label for="giveawayKeyPhrase">Giveaway Keyphrase</label>
        <input type="text" class="form-control" id="giveawayKeyPhrase" name="giveawayKeyPhrase" required>
      </div>
      <button class="btn btn-success">Submit</button>
      <div class="container">     

        <div class="well well-sm text-center">

          <h3>Timer</h3>
          
          <div class="btn-group" data-toggle="buttons">
            
            <label class="btn btn-success active">
              <input type="radio" name="options" id="option2" autocomplete="off" checked>
              <span class="glyphicon glyphicon-ok">No timer</span>
            </label>

            <label class="btn btn-primary">
              <input type="radio" name="options" id="option1" autocomplete="off">
              <span class="glyphicon glyphicon-ok">3</span>
            </label>

            <label class="btn btn-info">
              <input type="radio" name="options" id="option2" autocomplete="off">
              <span class="glyphicon glyphicon-ok">5</span>
            </label>

            <label class="btn btn-default">
              <input type="radio" name="options" id="option2" autocomplete="off">
              <span class="glyphicon glyphicon-ok">10</span>
            </label>

            <label class="btn btn-warning">
              <input type="radio" name="options" id="option2" autocomplete="off">
              <span class="glyphicon glyphicon-ok">30</span>
            </label>

            <label class="btn btn-danger">
              <input type="radio" name="options" id="option2" autocomplete="off">
              <span class="glyphicon glyphicon-ok">60s</span>
            </label>
          
          </div>


        </div>

      </div>



    </form>
  </div>
</div>
