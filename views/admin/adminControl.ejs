<h1 class="text-center">Admin Control Panel</h1>

<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <form action="/admin/adminGiveawayList" method="POST" accept-charset="utf-8">
      <div class="form-group">
        <label for="giveawayName">Giveaway Name</label>
        <input type="text" class="form-control" id="giveawayName" name="giveawayName" required>
        <label for="giveawayKeyPhrase">Giveaway Keyphrase</label>
        <input type="text" class="form-control" id="giveawayKeyPhrase" name="giveawayKeyPhrase" required>
      </div>
      <div class="well well-sm text-center">
        <h3>Timer</h3>
        <div class="btn-group" data-toggle="buttons">           
          <label class="btn btn-success active">
            <input type="radio" name="options" value="0" autocomplete="off" checked>
            <span class="glyphicon glyphicon-ok">Endless</span>
          </label>
          <label class="btn btn-primary">
            <input type="radio" name="options" value="3" autocomplete="off">
            <span class="glyphicon glyphicon-ok">3</span>
          </label>
          <label class="btn btn-info">
            <input type="radio" name="options" value="5" autocomplete="off">
            <span class="glyphicon glyphicon-ok">5</span>
          </label>
          <label class="btn btn-default">
            <input type="radio" name="options" value="10" autocomplete="off">
            <span class="glyphicon glyphicon-ok">10</span>
          </label>
        </div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <form action="/admin/uploadGameData" method="POST">
      <div class="form-group">
        <label for="uploadGameData">Upload</label>
        <input type="file" class="form-control" id="uploadGameData" name="uploadGameData" required>
      </div>
      <button class="btn btn-success">Upload CSV</button>
    </form>
  </div>
</div>
<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Current Game List</h1>
    <% games.forEach(function(game) { %>
      <%=  game.name %>
      <%=  game.code %>
      <%=  game.price %>
    <% }); %>  
  </div>
</div>

