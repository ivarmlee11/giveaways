<script src="/js/adminAuction.js"></script>


<div class="container">
  <div class="row">
    <h2 class="text-center">Auction Control</h2>
  </div>
  <div>
    <form id="form" action="/auction/adminAuction" method="POST">

      <div class="form-group row">
        <label for="auctionName" class="col-sm-2 col-form-label">Auction Name</label>
        <div class="col-sm-10">
          <input id="auctionName" class="form-control" name="auctionName" type="text" placeholder="Name" required>
        </div>
      </div>

      <fieldset class="form-group row">
        <legend class="col-form-legend col-sm-2">Prize</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="radio" name="prize" id="prize" value="games" checked>
                Games 
            </label>
          </div>
          <select id="gameList" name="game" class="selectpicker">
          </select>
        </div>
      </fieldset>

      <fieldset id="auctionLength" class="form-group row">
        <legend class="col-form-legend col-sm-2">Timer (Minutes)</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <label class="form-check-label">
              <input class="form-check-input" type="radio" name="timer" id="auction3mins" value="3">
                <span class="bold"> 3 </span>
            </label>
            <label class="form-check-label">
              <input class="form-check-input" type="radio" name="timer" id="auction5mins" value="5">
                <span class="bold"> 5 </span>
            </label>
            <label class="form-check-label">
              <input class="form-check-input" type="radio" name="timer" id="auction10mins" value="10" checked>
                <span class="bold"> 10 </span>
            </label>
          </div>
        </div>
      </fieldset>

      <input id="hiddenGameIdInput" class="form-control hide" name="gameListId" type="text">
    
      <button id="submitButton" type="submit" class="btn-primary success hide">Submit</button>
    </form>
  </div>
</div>

<div class="container">
  <h2 class="text-center">Kiwi Coins For Each User</h2>
  <div class="row text-center">
    <select id="playerSelect"></select>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="input-group">
      <span class="input-group-btn">
        <button type="button" class="btn btn-default btn-number" disabled="disabled" data-type="minus" data-field="kiwiCoins">
          <span class="glyphicon glyphicon-minus"></span>
        </button>
      </span>
      
      <input id="kiwiCount" type="number" name="kiwiCoins" class="form-control input-number" value="1" min="-99999" max="999999999999">
      
      <span class="input-group-btn">
        <button type="button" class="btn btn-default btn-number" data-type="plus" data-field="kiwiCoins">
          <span class="glyphicon glyphicon-plus"></span>
        </button>
        <button id="kiwSubmit" class="btn btn-info hide">Alter Kiwi Count</button>
      </span>
    </div>
  </div>
</div>
